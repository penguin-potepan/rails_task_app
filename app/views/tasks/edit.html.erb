<h2>スケジュール編集</h2>

<%= form_for @task do |f| %>
    <table>
        <tr>
            <th><%= f.label :title ,"タイトル" %></th>
            <td><%= f.text_field :title %></td>
        </tr>
        <tr>
            <th><%= f.label :start_date ,"開始日" %></th>
            <td><%= f.date_select :post_start %></td>
        </tr>
        <tr>
            <th><%= f.label :end_date ,"終了日" %></th>
            <td><%= f.date_select :post_end %></td>
        </tr>
        <tr>
            <th><%= f.label :all_day ,"終日" %></th>
            <td><%= f.check_box :all_day %></td>
        </tr>
        <tr>
            <th><%= f.label :memo ,"メモ" %></th>
            <td><%= f.text_area :memo %></td>
        </tr>
    </table>
    <div>
        <ul>
            <li><%= f.submit "編集を完了する" %></li>
            <li><%= link_to "スケジュール一覧に戻る", :tasks %></li>
        </ul>
    </div>
<% end %>